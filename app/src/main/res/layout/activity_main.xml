<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pracc06_3.metropolitan.fit.rs.pracc06_3.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add info to DB"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputName"
            android:text="Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputIndex"
            android:layout_gravity="center_horizontal"
            android:text="Index" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputPoints"
            android:layout_gravity="center_horizontal"
            android:text="Points" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputId"
            android:layout_gravity="center_horizontal"
            android:text="ID" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save Info"
            android:id="@+id/saveInfoButton"
            android:layout_gravity="center_horizontal"
            android:onClick="add" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="View Info"
            android:id="@+id/viewInfoButton"
            android:layout_gravity="center_horizontal"
            android:onClick="view" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE INFO"
            android:id="@+id/updateInfoButton"
            android:layout_gravity="center_horizontal"
            android:onClick="update" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DElete info"
            android:id="@+id/deleteInfoButton"
            android:layout_gravity="center_horizontal"
            android:onClick="delete" />
    </LinearLayout>
</RelativeLayout>
